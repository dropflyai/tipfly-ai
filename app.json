{
  "expo": {
    "name": "TipFly AI",
    "slug": "tipflyai-app",
    "version": "1.0.2",
    "scheme": "tipflyai",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0F172A"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.tipflyai.app",
      "buildNumber": "17",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan receipts for automatic tip entry.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to save and upload receipt images.",
        "NSSpeechRecognitionUsageDescription": "This app uses speech recognition to let you add tips using your voice.",
        "NSMicrophoneUsageDescription": "This app uses the microphone for voice input to quickly log your tips.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0F172A"
      },
      "package": "com.tipflyai.app",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "SCHEDULE_EXACT_ALARM",
        "RECORD_AUDIO"
      ]
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#00A8E8"
        }
      ],
      [
        "expo-speech-recognition",
        {
          "microphonePermission": "TipFly needs microphone access for voice input.",
          "speechRecognitionPermission": "TipFly uses speech recognition to log tips by voice."
        }
      ]
    ],
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "updates": {
      "enabled": false
    },
    "extra": {
      "eas": {
        "projectId": "678843bb-99fd-4806-b1a7-79e07f4346af"
      }
    },
    "owner": "dropfly"
  }
}
